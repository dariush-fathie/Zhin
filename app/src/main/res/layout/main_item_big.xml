<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardPreventCornerOverlap="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:src="@drawable/ic_image"
                android:id="@+id/iv_adsImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/imageBackColor" />

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="10dp">

            <TextView
                android:paddingBottom="5dp"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تیتر آگهی #1"
                android:textColor="@color/title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_subTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:text="خاصیت 2"
                android:textColor="@color/subTitle"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_subTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_title"
                android:layout_alignParentStart="true"
                android:text="خاصیت #1"
                android:textColor="@color/red"
                android:textSize="13sp" />

        </RelativeLayout>

        <View
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c1" />

        <LinearLayout
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_like" />

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_comment" />

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/iv_location"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location2" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>